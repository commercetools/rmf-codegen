<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
    <variable name="LOGLEVEL" value="${LOGLEVEL:-INFO}" />
    <root level="${LOGLEVEL}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
